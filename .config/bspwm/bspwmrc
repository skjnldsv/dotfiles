bspc rule -a "Messenger for Desktop" desktop=^6
bspc rule -a Hexchat desktop=^7
bspc rule -a Ristretto state=floating
bspc rule -a Gthumb state=floating
bspc rule -a File-roller state=floating
bspc rule -a Xarchiver state=floating
bspc rule -a Keepassx state=floating
bspc rule -a Oblogout state=fullscreen
bspc rule -a Whatsie floating=off desktop=^6

# Lemonbar
